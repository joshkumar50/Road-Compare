# RoadCompare Environment Variables

# Database
DATABASE_URL=postgresql+psycopg2://road:compare@postgres:5432/roadcompare
REDIS_URL=redis://redis:6379/0

# MongoDB for scalable storage (optional but recommended)
MONGO_URI=mongodb://localhost:27017/
MONGO_DB=roadcompare

# Storage
S3_ENDPOINT=http://minio:9000
S3_REGION=us-east-1
S3_BUCKET=roadcompare
S3_SECURE=false

# CORS
CORS_ORIGINS=http://localhost:5173,https://road-compare.vercel.app
FRONTEND_URL=http://localhost:5173

# API
API_PREFIX=/api/v1
SECRET_KEY=your-secret-key-here

# Worker Settings
ENABLE_WORKER=false
DEMO_MODE=false

# AI Model Settings (NEW)
USE_YOLO=true  # Enable YOLOv8 AI detection
MODEL_PATH=models/road_defects_yolov8x.pt  # Path to trained model
TEMPORAL_FRAMES=5  # Frames for temporal consistency
BLUR_THRESHOLD=100.0  # Blur detection threshold

# Detection Settings (NEW)
FRAME_RATE=2  # Frames per second to extract
MAX_FRAMES=120  # Maximum frames to process
CONFIDENCE_THRESHOLD=0.45  # Base confidence threshold

# Model Training (for development)
YOLO_MODEL_SIZE=x  # n, s, m, l, x
TRAINING_EPOCHS=300
BATCH_SIZE=16
IMAGE_SIZE=640

# Deployment
PORT=8000
HOST=0.0.0.0
